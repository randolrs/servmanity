

<%= render 'users/dashboard_header' %>

<div class="content">

	<% if @default_dashboard %>

		<section class="content-section">

			<header class="centered">How Can We Help You Today?</header>

			<div class="content-column-container">
				
				<% ServiceCategory.last(3).each do |category| %>

					<%= link_to initiate_service_request_path(category.url_name) do %>

						<div class="content-column spread-box">
							
							<div class="spread-box">

								<div class="image-container">

									<div class="image-overlay">

										<h2><%= category.name%></h2>

									</div>

									<%= image_tag category.image.url(:medium), class:"material-box-shadow" %>

								</div>

							</div>

						</div>

					<%end%>

				<%end%>

			</div>

		</section>


		<section class="content-section">

			<header class="centered">How to Get Started</header>

			<div class="content-column-container">
				<div class="content-column"><span class="number-badge material-box-shadow yellow-background black-text">1</span></div>
				<div class="content-column">
					<h3>Pick a Service</h3>
					<p>Choose from our list of popular chores and errands below or <a href="#">see a list of all available services</a> (link).</p>
				</div>
			</div>

			<div class="content-column-container">
				
				<div class="content-column">
					<span class="number-badge material-box-shadow yellow-background black-text">2</span>
				</div>
				
				<div class="content-column">
					<h3>Get Matched</h3>
					<p>Some kind of service or something.</p>
				</div>

			</div>

			<div class="content-column-container">
				
				<div class="content-column"><span class="number-badge material-box-shadow yellow-background black-text">3</span></div>
				
				<div class="content-column">
					<h3>Get it Done</h3>
					<p>Some kind of service or something.</p>
				</div>

			</div>

		</section>

	<%else%>

		<div class="reveal-panel" id="home">

			<section class="content-section">


			</section>

		</div>

		<div class="reveal-panel" id="my-tasks" style="display: none;">
			
			<section class="content-section">

				<header>My Tasks</header>
				</header>

			</section>

		</div>

		<div class="reveal-panel" id="balance" style="display: none;">
			
			<section class="content-section">

				<header>Balance</header>
				</header>

			</section>

		</div>

	<%end%>

</div>