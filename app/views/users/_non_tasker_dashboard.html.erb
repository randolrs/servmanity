

<%= render 'users/dashboard_header' %>

<div class="content">

	<% if @default_dashboard %>

		<section class="content-section">

			<header class="centered">How Can We Help You Today?</header>

			<div class="content-column-container">
				
				<% ServiceCategory.last(3).each do |category| %>

					<%= link_to initiate_service_request_path(category.url_name) do %>

						<div class="content-column spread-box">
							
							<div class="spread-box">

								<div class="image-container">

									<div class="image-overlay">

										<h2><%= category.name%></h2>

									</div>

									<%= image_tag category.image.url(:medium), class:"material-box-shadow" %>

								</div>

							</div>

						</div>

					<%end%>

				<%end%>

			</div>

		</section>


		<section class="content-section">

			<header class="centered">How to Get Started</header>

			<div class="content-column-container">
				<div class="content-column"><span class="number-badge material-box-shadow yellow-background black-text">1</span></div>
				<div class="content-column">
					<h3>Pick a Service</h3>
					<p>Choose from our list of popular chores and errands below or <a href="#">see a list of all available services</a> (link).</p>
				</div>
			</div>

			<div class="content-column-container">
				
				<div class="content-column">
					<span class="number-badge material-box-shadow yellow-background black-text">2</span>
				</div>
				
				<div class="content-column">
					<h3>Get Matched</h3>
					<p>Some kind of service or something.</p>
				</div>

			</div>

			<div class="content-column-container">
				
				<div class="content-column"><span class="number-badge material-box-shadow yellow-background black-text">3</span></div>
				
				<div class="content-column">
					<h3>Get it Done</h3>
					<p>Some kind of service or something.</p>
				</div>

			</div>

		</section>

	<%else%>

		<div class="reveal-panel" id="my-requests">
			
			<section class="content-section">

				<header class="full-screen-only">My Requests</header>

				<span style="float: right; display: inline-block;"><%= link_to "Hire Someone", service_category_formatted_index_path, class: "button purple-background full-screen-only medium" %></span>

				<% current_user.service_requests.each do |request| %>
					
					<%# link_to about_path do %>
						
						<div class="service-request-index card">
							
							<h3><%= request.service_category.name %> Request</h3><span class="right-corner">2/28 (Morning)</span>

							<p>Submitted <%= time_ago_in_words(request.created_at) %> ago</p>
							<p>Location: 616 N. 7th St. (St. Louis.)</p>

							<p>Additional Notes:<i> <%= request.additional_information.first(20) %><% if request.additional_information.length > 20 %>...<%end%></i></p>
							<br>
							<ul class="horizontal spread button-list "><li><a class="button dark-blue-background">Edit</a></li><li><a class="button dark-blue-background">Cancel</a></li><li><a class="button dark-red-background">Cancel</a></li></ul>
			
						</div>

					<%#end%>

				<%end%>

			</section>

		</div>

		<div class="reveal-panel" id="messages" style="display: none;">
			
			<section class="content-section">

				<header class="full-screen-only">Messages</header>
				</header>

			</section>

		</div>

	<%end%>

</div>