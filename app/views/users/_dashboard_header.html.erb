<% unless @default_dashboard %>

	<div class="dashboard-header dark-red-background material-box-shadow">

		<ul class="horizontal spread-on-mobile">

			<% if current_user.is_tasker %>
				
				<li><a class="click-to-reveal clickable active" data-reveal-panel-id="home">Home</a></li><li><a class="click-to-reveal clickable" data-reveal-panel-id="my-tasks">My Tasks</a></li><li><a class="click-to-reveal clickable" data-reveal-panel-id="balance">Balance</a></li>
			
			<%else%>

				<li><a class="click-to-reveal clickable active" data-reveal-panel-id="home"><span class="glyphicon glyphicon-home" aria-hidden=true style="margin-right: 10px;"></span>Home</a></li><li><a class="click-to-reveal clickable" data-reveal-panel-id="my-requests">Requests</a></li><li><a class="click-to-reveal clickable" data-reveal-panel-id="messages"><span class="glyphicon glyphicon-envelope" aria-hidden=true style="margin-right: 10px;"></span>Messages</a></li>


			<%end%>

		</ul>
		
	</div>

<% else %>

	<% if flash[:error_prompt] %>

		<div class="flash-prompt notice dark-red-background">

			<p><%= flash[:error_prompt] %></p>

		</div>

	<%else%>

		<%if @top_of_page_message %>
		
			<div class="top-of-page-message brand-blue-background">
				<p><%= @top_of_page_message %></p>
			</div>

		<%end%>

	<% end %>


<% end %>