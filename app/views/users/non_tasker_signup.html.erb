<% if flash[:message_at_top] %>

	<div class="message-at-top notice brand-yellow-background">

		<p><%= flash[:message_at_top] %></p>

	</div>

<%end%>


<h1 class="centered dark-text-shadow"><span class="servmanity-green">SERV</span><span class="servmanity-yellow">MANITY</span></h1>

<div class="form-container medium clear">

	<%= form_for(:user, :url => registration_path(:user)) do |f| %>

		<div class="field">
		  
		  <label>First Name</label>
		  <br>

		  <%= f.text_field :first_name, placeholder: "First Name", :required => true %>

		</div>

		<div class="field">
		  <label>Email</label>
		  <br>
		  <%= f.email_field :email, autofocus: true, placeholder: "Email", :required => true %>
		</div>

		<div class="field">
		  <label>Password</label>
		  <br>
		  <%= f.password_field :password, autocomplete: "off", placeholder: "Password", required: true, :required => true %>
		</div>

		<div class="actions">
		  <%= f.submit "Signup", class: "button medium dark-red-background" %>
		</div>

		<br>
		<div>By signing up you agree to our <%= link_to "Terms of Service", terms_of_service_path,  target: :_blank %> and <%= link_to "Privacy Policy", privacy_policy_path,  target: :_blank %>.</div>

	<% end %>

</div>

<p class="centered"><%= link_to "Login", login_path %></p>