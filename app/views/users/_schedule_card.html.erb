
<div class="card centered">

	<h3><span class="glyphicon glyphicon-calendar" aria-hidden="true" style="margin-right: 5px;"></span> My Availablity</h3>

	<div class="card-content">

		<div class="row">
			
			<% (Date.today..Date.tomorrow + 10).each do |date| %>
				
				<div class="col-xs-12 col-sm-6 col-md-4">
					<div class="calendar-day">
						<a class="title"><%= date.strftime("%a") %>, <%= date.strftime("%b %e")%></a>
						
						<a class="unavailable date-toggle" data-date="<%= date %>" data-time-of-day="Morning">Morning</a>
						
						<a class="available date-toggle" data-date="<%= date %>" data-time-of-day="Afternoon">Afternoon</a>
						
						<a class="unavailable date-toggle" data-date="<%= date %>" data-time-of-day="Evening">Evening</a>
					</div>
				</div>

			<% end%>

		</div>

	</div>

</div>