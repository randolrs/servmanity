<div class="content">

	<header class="centered">Welcome to Servmanity, <%= current_user.first_name %></header>

	<% if @has_tasks %>

		<h2>Upcoming Tasks</h2>

		<h2>Previous Tasks</h2>

	<% else %>

		<section class="content-section">

			<header>How to Get Hired</header>

			<div class="content-column-container">
				<div class="content-column"><span class="number-badge material-box-shadow yellow-background black-text">1</span></div>
				<div class="content-column">
					<h3>Add a Photo</h3>
					<p>Choose from our list of popular chores and errands below or <a href="#">see a list of all available services</a> (link).</p>
				</div>
			</div>

			<div class="content-column-container">
				
				<div class="content-column">
					<span class="number-badge material-box-shadow yellow-background black-text">2</span>
				</div>
				
				<div class="content-column">
					<h3>Set Your Hourly Right</h3>
					<p>Some kind of service or something.</p>
				</div>

			</div>

			<div class="content-column-container">
				
				<div class="content-column"><span class="number-badge material-box-shadow yellow-background black-text">3</span></div>
				
				<div class="content-column">
					<h3>Match with Customers</h3>
					<p>Some kind of service or something.</p>
				</div>

			</div>

		</section>

		<section class="content-section">

			<header>How Can We Help?</header>

			<div class="content-column-container">
				
				<% ServiceCategory.last(3).each do |category| %>

					<%= link_to service_category_home_path(category.url_name) do %>

						<div class="content-column spread-box">
							
							<div class="spread-box material-box-shadow white-background clickable">

								<div class="image-container">


								</div>

								<h4><%= category.name %></h4>

								<p>$78/hour &amp; Up</p>

							</div>

						</div>

					<%end%>

				<%end%>

			</div>

		</section>

	<%end%>

</div>