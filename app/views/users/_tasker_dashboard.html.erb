
<%= render 'users/dashboard_header' %>



<div class="full-screen-content">

	<div class="content with-fixed-header">

		<% unless current_user.has_tasker_basics %>
		
			<header>Update your profile before getting started</header>

			<div class="row">

				<div class="col-xs-12 col-sm-12">

					<div class="card">

						<span class="glyphicon glyphicon-exclamation-sign card-alert" aria-hidden="true"></span>

						<form>
							  	
						  	<label>Update Your Address</label><br>

						  	<div class="row">

								<div class="col-xs-12 col-sm-8">

								  	<input type="text" placeholder="Update Address" class:"geocomplete-input"></input>

								</div>

								<div class="col-xs-12 col-sm-4">
									<a class="button orange-background stretch" style="margin-top: 0.5em;">Update</a>

								</div>

							</div>

						</form>

					</div>

				</div>

				<div class="col-xs-12 col-sm-6">

					<div class="card">

						<span class="glyphicon glyphicon-exclamation-sign card-alert" aria-hidden="true"></span>

						<div class="field">

							<label>Upload a Photo of Yourself</label><br>

							<a class="button orange-background stretch">Upload Photo</a>

						</div>

					</div>

				</div>

				<div class="col-xs-12 col-sm-6">

					<div class="card">

						<span class="glyphicon glyphicon-exclamation-sign card-alert" aria-hidden="true"></span>

						<label>Add Services to Your Profile</label>

						<%= link_to "Add Services", add_service_to_user_path, class:"button orange-background stretch"%>

					</div>

				</div>

			</div>

		<%else%>

			<header>What's going on now...</header>

			<div class="row">

				<div class="col-xs-12 col-sm-7">
					
					<h4>Request for You</h4>

					<div class="card">

						XX

					</div>

				</div>

				<div class="col-xs-12 col-sm-5">

					<h4>My Availability this Week</h4>

					<div class="card">

						<div class="row">
							
							<%(Date.today..Date.tomorrow + 5).each do |date| %>
								
								<div class="col-xs-6 col-sm-12">
									<div class="calendar-day">
										<a class="title"><%= date.strftime("%a, %b %e")%></a>
										
										<a class="unavailable">Morning</a>
										
										<a class="available">Afternoon</a>
										
										<a class="unavailable">Evening</a>
									</div>
								</div>

							<%end%>

						</div>

					</div>

				</div>

			</div>


		<%end%>

	</div>

</div>