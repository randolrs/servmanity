
<%= render 'users/dashboard_header' %>

<div class="full-screen-content">

	<div class="content with-fixed-header">

		<% unless current_user.has_tasker_basics %>
		
			<header>Update your profile before getting started</header>

			<div class="row">

				<div class="col-xs-12 col-sm-12">

					<div class="card">

						<span class="glyphicon glyphicon-exclamation-sign card-alert" aria-hidden="true"></span>

						<form>
							  	
						  	<label>Update Your Address</label><br>

						  	<div class="row">

								<div class="col-xs-12 col-sm-8">

								  	<input type="text" placeholder="Update Address" class:"geocomplete-input"></input>

								</div>

								<div class="col-xs-12 col-sm-4">
									<a class="button brand-blue-background stretch" style="margin-top: 0.5em;">Update</a>

								</div>

							</div>

						</form>

					</div>

				</div>

				<div class="col-xs-12 col-sm-6">

					<div class="card">

						<span class="glyphicon glyphicon-exclamation-sign card-alert" aria-hidden="true"></span>

						<div class="field">

							<label>Upload a Photo of Yourself</label><br>

							<a class="button orange-background stretch">Upload Photo</a>

						</div>

					</div>

				</div>

				<div class="col-xs-12 col-sm-6">

					<div class="card">

						<span class="glyphicon glyphicon-exclamation-sign card-alert" aria-hidden="true"></span>

						<label>Add Services to Your Profile</label>

						<%= link_to "Add Services", add_service_to_user_path, class:"button brand-blue-background stretch"%>

					</div>

				</div>

			</div>

		<%else%>

			<header>Dashboard</header>

			<div class="row">

				<div class="col-xs-12 col-sm-7">

					<%= link_to live_path do %>
						
						<div class="card index">
							
							<p><span class="glyphicon glyphicon-exclamation-sign"></span><%= current_user.live_requests_for_tasker.count %> Live Requests for You<span class="glyphicon glyphicon-chevron-right" aria-hidden="true" style="float: right"></span></p>
							
						</div>

					<%end%>

					<%= link_to requests_path do %>
						
						<div class="card index">
							
							<p><span class="glyphicon glyphicon-exclamation-sign"></span>You have 1 New Scheduled Task <span class="glyphicon glyphicon-chevron-right" aria-hidden="true" style="float: right"></span></p>
							
						</div>

					<%end%>

					<%= link_to requests_path do %>
						
						<div class="card index">
							
							<p><span class="glyphicon glyphicon-time" aria-hidden="true"></span>You have 3 Tasks in the next 24 hours <span class="glyphicon glyphicon-chevron-right" aria-hidden="true" style="float: right"></span></p>
							
						</div>

					<%end%>

					<%= link_to balance_path do %>
						
						<div class="card index">
							
							<p><span class="glyphicon glyphicon-usd" aria-hidden="true"></span> You have a balance of $99.00 <span class="glyphicon glyphicon-chevron-right" aria-hidden="true" style="float: right"></span></p>

						</div>

					<%end%>

					<br>
					
				</div>

				<div class="col-xs-12 col-sm-5">
					
					<div class="row">

						<div class="col-xs-12 col-sm-12">

							<div class="card centered">

								<h3 class="centered"><span class="glyphicon glyphicon-map-marker" aria-hidden="true" style="margin-right: 5px;"></span> My Location</h3>

								<%= form_for(current_user, url: registration_path(current_user), html: { method: :put, class:"" }) do |f| %>

									<%= f.text_field :address, placeholder:"Enter Your Address", class:"geocomplete-input clear-on-focus" %>
									
									<br>

									<%= f.submit "Update Location", class: "button stretch brand-blue-background" %>

								<%end%>

							</div>

							<br>

						</div>


						<div class="col-xs-12 col-sm-12">

							<%= render 'users/schedule_card' %>

						</div>

					</div>

				</div>

				

			</div>


		<%end%>

	</div>

</div>