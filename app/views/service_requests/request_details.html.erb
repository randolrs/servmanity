<%= render 'service_requests/progress_header' %>

<div class="content with-fixed-header">

	<%= form_for(@service_request) do |f| %>

		<header class="full-screen-only"><%if @service_category %><%= @service_category.name %> Request<%end%></header>

		<%if @service_category%>

			<%= f.hidden_field :service_category_id, :value => @service_category.id %>

		<%else%>

			<div class="form-container medium card">

				<label>Which Service?</label>

				<%= f.collection_select :service_category_id, ServiceCategory.all, :id, :name, :prompt=>"Select a Service"%>
			
			</div>


		<%end%>

		<div class="form-container medium card">

			<label>When?</label>
			<br><br>
			<a class="button grey-background medium"><span><%= Time.now.strftime("%A")%>, </span><%= Time.now.strftime("%b %d")%></a>
			<br><br>
			<ul class="horizontal centered button-list spread three"><li><a class="button grey-background">Morning<br>(8a - 12p)</a></li><li><a class="button grey-background">Afternoon<br>(12p - 5p)</a></li><li><a class="button grey-background">Evening<br>(5p - 9p)</a></li></ul>
			
		</div>


		<div class="form-container medium card">
			
			<label>Where?</label>

			<%= f.text_field :address, placeholder:"Enter Your Address" %>
			
		</div>

		<div class="form-container medium card">
			
			<label>Additional Details</label><br>

			<%= f.text_area :additional_information, placeholder: @additional_information_example_text  %>
			

		</div>

		<div class="centered">
			<%= f.submit "Next", class:"button medium dark-red-background hide-on-mobile-device"%>

			<%= f.submit "Next", class:"button medium dark-red-background bottom-cta"%>
		</div>

	<%end%>

</div>
