<p id="notice"><%= notice %></p>

<h1>Listing Service Requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Service category</th>
      <th>Address</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Additional information</th>
      <th>Scheduled date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_requests.each do |service_request| %>
      <tr>
        <td><%= service_request.user_id %></td>
        <td><%= service_request.service_category_id %></td>
        <td><%= service_request.address %></td>
        <td><%= service_request.longitude %></td>
        <td><%= service_request.latitude %></td>
        <td><%= service_request.additional_information %></td>
        <td><%= service_request.scheduled_date %></td>
        <td><%= link_to 'Show', service_request %></td>
        <td><%= link_to 'Edit', edit_service_request_path(service_request) %></td>
        <td><%= link_to 'Destroy', service_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

