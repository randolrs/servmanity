<%= render 'service_requests/progress_header' %>

<div class="content has_fixed_header">

	<header>Choose a <%= @service_category %> Professional</header>

	<% @service_request.recommended_taskers.each do |tasker| %>

		<div class="material-box-shadow">

			<%= image_tag tasker.image.url(:medium), class:"medium-image" %>
			<br>
			<h3><%= tasker.public_display_name %></h3>
			<br>
			<h4>4.5/5 Rating</h4>
			<br>
			<h4>30 Reviews</h4>

		</div>

	<%end%>

</div>
