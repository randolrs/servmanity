<div class="reveal-panel" id="where">

	<div class="card">

		<header>Confirm Your Address</header>

		<% if user_signed_in? %>
			
			<% if current_user.address %>
					
				<%= f.text_field :address, value:current_user.address, class:"geocomplete-input address_input_for_embed" %>

				<br><br>

				<%= render :partial => 'maps/embed_map', :locals => {:latitude_input => current_user.latitude, :longitude_input => current_user.longitude} %>
			
			<%else%>

				<% unless session[:city].blank? %>
					
					<%= f.text_field :address, class:"geocomplete-input address_input_for_embed" %>

					<br><br>

					<%= render :partial => 'maps/embed_map', :locals => {:latitude_input => session[:latitude], :longitude_input => session[:longitude]} %>

				<%else%>
						
					<%= f.text_field :address, class:"geocomplete-input address_input_for_embed" %>

				<%end%>


			<%end%>

		<%else%>

			<% unless session[:city].blank? %>
					
				<%= f.text_field :address, class:"geocomplete-input address_input_for_embed" %>

				<br><br>

				<%= render :partial => 'maps/embed_map', :locals => {:latitude_input => session[:latitude], :longitude_input => session[:longitude]} %>

			<%end%>

		<%end%>

		<br>
		<a class="button brand-blue-background medium click-to-reveal make-not-live full-screen-only" data-reveal-panel-id="payment">Continue</a>

	</div>

	<div class="fixed-bottom-cta mobile-only">

		<a class="button brand-blue-background medium click-to-reveal make-not-live" data-reveal-panel-id="payment">Continue</a>

	</div>

</div>